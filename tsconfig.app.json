{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "node",             // Más común y compatible que "bundler"
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    "strict": true,
    "skipLibCheck": true,                   // Para evitar chequeos de tipos en libs externas
    "esModuleInterop": true,                // Mejora interoperabilidad CommonJS/ESModules
    "forceConsistentCasingInFileNames": true,  // Mejora control de mayúsculas/minúsculas en imports

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "isolatedModules": true                 // Recomendado para proyectos con Babel o Vite
  },
  "include": ["src"]
}
